proc lrc (_cnt, _max) {
	if (ref(_cnt) == null)
		ref(_cnt) = 1;
	else
		stop(++ref(_cnt) >= _max);
};

T := { lrc('n', 10); } (
		true
	||  '(' $T ')'
	||  not $F
	||	$T ( or|and|is $T || or $F )
	||	$F ( or $T || is $F )
	||	if $T ,? then $T
	||	if $F ,? then $T|$F
);

F := { lrc('n', 10); } (
		false
	||  '(' $F ')'
	||  not $T
	||	$F ( or|and $F || and|is $T )
	||	$T ( and $F || is $F )
	||	if $T ,? then $F
);

S := (
	   $T:P { result = "it is true, that \"$P\""; }
	|| $F:P { result = "it is not true, that \"$P\""; }
	) ^$;
