/*
 *	A trivial recursive counter.
 *	_cnt - name of the counter
 *  _max - maximum allowed recursion depth
 */
proc lrc (_cnt, _max) {
	if (ref(_cnt) == null)
		ref(_cnt) = 1;
	else
		stop(++ref(_cnt) >= _max);
};

// direct left-recursive rule of form X -> X Y | Y
X := {lrc('n', 5);} $X $Y || $Y;
Y := ^\w+;

// root rule
S := <X> ^$;
